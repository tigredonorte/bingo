{
  "name": "@repo/codegraph-plugin",
  "version": "1.0.0",
  "description": "API Cost Optimization Plugin using AST-based code graph indexing",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "codegraph-mcp": "src/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/mcp-server.ts",
    "start": "node dist/mcp-server.js",
    "index": "tsx src/cli.ts index",
    "search": "tsx src/cli.ts search",
    "test": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "glob": "^11.0.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-json": "^0.21.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
