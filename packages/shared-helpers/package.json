{
  "name": "@repo/shared-helpers",
  "version": "1.0.0",
  "description": "Shared helper utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "require": "./dist/*/index.js",
      "default": "./dist/*/index.js"
    },
    "./prisma": {
      "types": "./dist/prisma/index.d.ts",
      "require": "./dist/prisma/index.js",
      "default": "./dist/prisma/index.js"
    }
  },
  "scripts": {
    "trigger": "pnpm -r --filter ./packages/** run build",
    "build": "tsc",
    "clean": "rm -rf dist node_modules coverage",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint:files": "bash -c 'eslint \"${@:-.}\" --max-warnings 0' _",
    "lint": "pnpm run lint:files .",
    "lint:fix": "bash -c 'eslint \"${@:-.}\" --max-warnings 0 --fix' _",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.693.0",
    "@maxmind/geoip2-node": "^6.3.4",
    "@prisma/client": "^5.22.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "jwt-decode": "^4.0.0",
    "pg": "^8.13.1",
    "tslib": "^2.6.2",
    "undici": "^6.21.3",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.10.6",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "prisma": "^5.22.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "environment",
    "config",
    "typescript"
  ],
  "author": "Universal Music Group",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/umg/app-services-monitoring",
    "directory": "packages/shared-helpers"
  }
}
