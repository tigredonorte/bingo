{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "vitest.config.ts", "tests"]
}